#include <stdio.h>
#include <stdlib.h>

struct _retire_info {
  int months;
  double contributions;
  double rate_of_return;
};
typedef struct _retire_info retire_info;

double calculateBalance(int currentBalance,double rate,int contribution){
  return currentBalance * (rate + 1)+contribution;
}

void retirement(int startAge,double initial,retire_info working, retire_info retired){
  for(;startAge<=startAge+working.months;startAge++){
    printf("Age %3d month %2d you have $%.2lf\n",startAge/12,startAge%12,initial);
    initial = calculateBalance(initial,working.rate_of_return,working.contributions);
  }
  
}

int main(){
  retire_info working;
  working.months = 489;
  working.contributions = 1000;
  working.rate_of_return = 0.045;
  retire_info retired;
  retired.months = 384;
  retired.contributions = -4000;
  retired.rate_of_return = 0.01;
  retirement(327,21345,working,retired);
}

